zypper() {
	for p in "$@"; do
		if [ $meta == 1 ]; then
			/usr/bin/zypper in -y -t pattern "$p"
		else
			/usr/bin/zypper in -y "$p"
		fi
	done
}

yum() {
	for p in "$@"; do
		if [ $meta == 1 ]; then
			/usr/bin/yum -y group install "$p"
		else
			/usr/bin/yum -y install "$p"
		fi
	done
}

apt() {
	for p in "$@"; do
		/usr/bin/apt-get -y install "$p"
	done
}

meta=0
while getopts "m" opt; do
	case $opt in
	m)
		meta=1
		;;
	?)
		echo 'invalid option'
		exit -1
		;;
	esac
done
shift $(($OPTIND - 1))

path=`dirname $0`
case `$path/os` in
sles)
	zypper "$@"
	;;
redhat)
	yum "$@"
	;;
debian)
	apt "$@"
	;;
esac

exit 0
